<Window x:Class="ContactBook.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactBook"
        mc:Ignorable="d"
        Title="Login" SizeToContent="WidthAndHeight" 
        ResizeMode="NoResize">
    <StackPanel>
        <Label>Логин:</Label>
        <TextBox Width="150" FontSize="14" Name="tbUserlogin"></TextBox>
        <Label>Пароль:</Label>
        <PasswordBox Name="tbUserpassword"></PasswordBox>
        <Button Click="btnOk_Click">OK</Button>
        <Button>Cancel</Button>
    </StackPanel>
</Window>
